<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
        <!-- SQL Dialect - type of database -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
 
        <!-- Database Connection Settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/test?serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        
        <!--  optionally specified -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
 
        <!-- Specifying Session Context -->
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
 
        <!-- Mapping With Model Class Containing Annotations -->
        <!--   <mapping class="entities.Student" />-->
      <!--  <mapping class="entities.Emp" />
        <mapping class="entities.PermanentEmp" />
        <mapping class="entities.ContractEmp" />
        
        <mapping class="entities.Orders" />
        <mapping class="entities.OrderItem" />-->
        
        <mapping class="entities.Product" />
        <mapping class="entities.Category" />
        
    </session-factory>
</hibernate-configuration>